<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Styles.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Grid x:Key="TitleGrid" Grid.Row="0" Background="{StaticResource TitleBackground}" Height="36" VerticalAlignment="Top">
        <TextBlock TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="15,0,0,0" Foreground="#d9edf9" FontSize="18"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Stretch">
            <Button Content="_" Width="40" VerticalAlignment="Stretch"  Style="{StaticResource TitleBarButtons}"/>
            <Button Content="X" Width="40" VerticalAlignment="Stretch" Style="{StaticResource TitleBarButtons}"/>
        </StackPanel>
    </Grid>

</ResourceDictionary>